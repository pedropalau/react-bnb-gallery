{
  "name": "react-bnb-gallery",
  "version": "2.0.0",
  "description": "Simple photo gallery based on React and Airbnb image gallery",
  "author": "Pedro Enrique Palau <pepalauisaac@gmail.com>",
  "homepage": "https://peterpalau.github.io/react-bnb-gallery/",
  "keywords": [
    "react",
    "gallery",
    "photos",
    "carousel",
    "image gallery",
    "photo gallery",
    "responsive",
    "slider",
    "component",
    "modal gallery",
    "images",
    "react image gallery",
    "react photo gallery",
    "react modal gallery",
    "react gallery"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:peterpalau/react-bnb-gallery.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.es.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./styles.css": "./styles.css"
  },
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist",
    "styles.css"
  ],
  "bugs": {
    "url": "https://github.com/peterpalau/react-bnb-gallery/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.30.2",
  "scripts": {
    "changeset": "changeset",
    "check": "pnpm dlx ultracite@7.2.3 check --diagnostic-level=error --formatter-enabled=false --assist-enabled=false --linter-enabled=true src tests src/css vite.config.js",
    "fix": "pnpm dlx ultracite@7.2.3 fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "vite build && pnpm build:types",
    "start": "vite build --watch",
    "docs:dev": "pnpm --dir docs dev",
    "docs:build": "pnpm --dir docs build",
    "docs:start": "pnpm --dir docs start",
    "docs:lint": "pnpm --dir docs lint",
    "docs:format": "pnpm --dir docs format",
    "prepublishOnly": "pnpm build",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish --provenance --access public",
    "lint": "pnpm lint:biome && pnpm typecheck",
    "lint:biome": "biome check --diagnostic-level=error src tests src/css vite.config.js",
    "format": "pnpm format:biome",
    "format:biome": "biome check --write src tests src/css vite.config.js",
    "preview": "pnpm docs:build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@changesets/cli": "^2.29.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-portal": "^4.0.7",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@welldone-software/why-did-you-render": "^4.2.5",
    "autoprefixer": "^10.4.21",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "classnames": "^2.2.6",
    "focus-trap-react": "^12.0.0",
    "lodash": "^4.17.19",
    "object.assign": "^4.1.0",
    "object.values": "^1.1.1",
    "react-portal": "^4.2.1"
  },
  "pnpm": {
    "overrides": {
      "cheerio": "1.0.0-rc.12"
    }
  }
}
